doctype html
html(lang="en")
    include ../_inc/_head.pug
    body
        .secSingle(class=`${myClass}`)
            .secSingle__content(class=`${myClassPart}`)
                article.specialFeatures122021__wrapper
                    .specialFeatures122021__cards.col2P4
                        -
                        each card in cards
                            .specialFeatures122021__cardsItem(class=card.class)
                                if(card.label)
                                    .specialFeatures122021__cardsItemLabel
                                        p.specialFeatures122021__cardsItemLabelText=card.label
                                if(card.labelGroup)
                                    each label in card.labelGroup
                                        .specialFeatures122021__cardsItemLabel
                                            p.specialFeatures122021__cardsItemLabelText=label.item
                                if(card.title)
                                    .specialFeatures122021__cardsItemTitle
                                        p.specialFeatures122021__cardsItemTitleText!=card.title
                                if(card.body)
                                    .specialFeatures122021__cardsItemBody
                                        p.specialFeatures122021__cardsItemBodyContent!=card.body
                                if(card.bodyGroup)
                                    - let index = 1
                                    .specialFeatures122021__cardsItemFlex: each content in card.bodyGroup
                                        .specialFeatures122021__cardsItemBody(class=`itemBody0${index++}`)
                                            p.specialFeatures122021__cardsItemBodyContent!=content.data
                                            .specialFeatures122021__cardsItemAuthor
                                                p.specialFeatures122021__cardsItemAuthorName!=content.nameProf
                                                    span.specialFeatures122021__cardsItemAuthorNameExtra さん
                                else
                                    .specialFeatures122021__cardsItemAuthor
                                        p.specialFeatures122021__cardsItemAuthorName!=card.name
                                            span.specialFeatures122021__cardsItemAuthorNameExtra さん
                    |
                    |
                    .specialFeatures122021__inner: each prof in profile
                        .specialFeatures122021__innerBorder(class=prof.class)
                            .specialFeatures122021__prof
                                .specialFeatures122021__profLabel
                                    p.specialFeatures122021__profLabelNo=prof.no
                                    span.specialFeatures122021__profLabelText!=prof.labelText
                                p.specialFeatures122021__profDesc!=prof.description
                                .specialFeatures122021__profFlex
                                    .specialFeatures122021__profContent
                                        .specialFeatures122021__profContentBuble(class=prof.bubleKarit)
                                            p.specialFeatures122021__profContentBubleData!=prof.bubbleContent
